<resources>

    <!-- Base application theme. -->
    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>
    <style name="MyMaterialTheme.Base" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="match_parent_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wrap_content_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_wrap_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_match_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="appcompat_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/space_layout_margin</item>
        <item name="android:padding">@dimen/space_layout_padding</item>
        <item name="android:tint">@color/colorAccent</item>
        <item name="android:textSize">@dimen/tv_text_size_medium</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="btn_common_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/tv_text_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">@dimen/space_layout_margin</item>
        <item name="android:padding">@dimen/space_layout_padding</item>
    </style>

    <style name="txtview_lbl_list_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/tv_text_size_small</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_weight">1.8</item>
        <item name="android:layout_marginLeft">@dimen/space_layout_margin_small</item>
        <item name="android:paddingLeft">@dimen/space_layout_padding_small</item>
    </style>

    <style name="txtview_list_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/tv_text_size_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/space_layout_margin_small</item>
        <item name="android:padding">@dimen/space_layout_padding_small</item>
    </style>
</resources>